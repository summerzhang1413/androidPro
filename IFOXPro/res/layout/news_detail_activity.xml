<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
  	<LinearLayout
  	    android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@color/topcolor1" >
  	    <ImageView
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:background="@drawable/back_news_text"
	          android:onClick="back" />
  	    
  	    <TextView
              android:id="@+id/other_login_title"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center_vertical"
              android:layout_weight="1"
              android:text="@string/news_detail"
              android:textColor="#fff"
              android:textSize="20dip" />
	 
  	</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:background="@drawable/image01">
	    <android.support.v4.view.ViewPager
		       android:id="@+id/image_slide_page11"
		       android:layout_width="fill_parent"
		       android:layout_height="200dip"
		       android:focusable="true" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:padding="8dip">
	    <TextView 
	        android:id="@+id/news_detail_title"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:textSize="20dip"/>
    </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:padding="8dip">
	    <TextView 
	        android:id="@+id/news_detail_time"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:padding="8dip">
	    <TextView 
	        android:id="@+id/news_detail_content"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>
